int my_strlen(char const *str)
{
    int i = 0;
    while(str[i] != 0)
    {
        i++;
    }
    return (i);
}

int my_put_nbr_base(int nb, char *str)
{
    int base = my_strlen(str);
    if (nb<0){
        nb = -nb;
        my_putchar('-');
    }
    while (nb >= base){
        my_put_nbr_base(nb / base);   
    }
    nb = nb % base;
}
